<resources>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item> 
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> 
        <item name="colorControlHighlight">@color/grey_bg</item> 
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerStyle" parent="BaseTheme">
        <item name="android:textSize">16sp</item>
        <item name="colorControlHighlight">@android:color/transparent</item> 
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>
    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="MoneyTextViewDefaultStyle">
        <item name="format">@string/default_format</item>
        <item name="symbol">$</item>
        <item name="decimalSeparator">\'</item>
        <item name="baseTextSize">18sp</item>
        <item name="baseTextColor">#000000</item>
        <item name="includeDecimalSeparator">true</item>
        <item name="decimalUnderline">false</item>
        <item name="symbolMargin">2dp</item>
        <item name="decimalMargin">2dp</item>
    </style>

    <style name="TextAppearance.CityGuide.Placeholder" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/global_text_size_placeholder</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <dimen name="global_text_size_placeholder">20sp</dimen>

    <declare-styleable name="MaterialSearchBar">
        <attr name="iconRight" format="reference"/>
        <attr name="iconLeft" format="reference"/>
        <attr name="hint" format="string"/>
        <attr name="maxSuggestionsCount" format="string"/>
        <attr name="speechMode" format="boolean"/>
        <attr name="hintColor" format="color"/>
        <attr name="textColor" format="color"/>
    </declare-styleable>

    <style name="PatioToolbarButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="TextAppearance.LocalBigApp.Display4" parent="@style/TextAppearance.AppCompat.Display4">
