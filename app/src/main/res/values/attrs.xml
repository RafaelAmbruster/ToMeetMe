<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MyTextView">
        <attr name="fontName" format="string" />
    </declare-styleable>

    <declare-styleable name="ProgressCircle">
        <attr name="android:textSize"/>
        <attr name="progressColor" format="color" />
        <attr name="incompleteProgressColor" format="color" />
        <attr name="strokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MaterialMenuView">
        <attr name="mm_color" format="color"/>
        <attr name="mm_scale" format="integer"/>
        <attr name="mm_transformDuration" format="integer"/>
        <attr name="mm_pressedDuration" format="integer"/>
        <attr name="mm_strokeWidth" format="integer"/>
        <attr name="mm_rtlEnabled" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="RangeBar">
        <attr name="tickStart" format="float" />
        <attr name="tickEnd" format="float" />
        <attr name="tickInterval" format="float" />
        <attr name="tickHeight" format="dimension" />
        <attr name="tickColor" format="color" />
        <attr name="barWeight" format="dimension" />
        <attr name="rangeBarColor" format="reference|color" />
        <attr name="pinColor" format="reference|color" />
        <attr name="selectorSize" format="dimension" />
        <attr name="pinPadding" format="dimension" />
        <attr name="pinMinFont" format="dimension" />
        <attr name="pinMaxFont" format="dimension" />
        <attr name="rangeBarPaddingBottom" format="dimension" />
        <attr name="selectorColor" format="reference|color" />
        <attr name="rangeBar" format="boolean" />
        <attr name="temporaryPins" format="boolean" />
        <attr name="connectingLineWeight" format="dimension" />
        <attr name="connectingLineColor" format="reference|color" />
        <attr name="pinRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
        <attr name="fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="Patio">
        <attr name="maxPictures" format="integer"/>
        <attr name="thumbnailWidth" format="dimension"/>
        <attr name="thumbnailHeight" format="dimension"/>
        <attr name="thumbnailsContainerBackground" format="color"/>
        <attr name="thumbnailsContainerPadding" format="dimension"/>
        <attr name="actionsTextColor" format="color"/>
        <attr name="thumbnailsMessage" format="string"/>
    </declare-styleable>

    <declare-styleable name="TextViewExpandableAnimation">
        <attr name="tvea_expandLines" format="integer" />
        <attr name="tvea_shrinkBitmap" format="reference" />
        <attr name="tvea_expandBitmap" format="reference" />
        <attr name="tvea_textStateColor" format="color" />
        <attr name="tvea_textContentColor" format="color" />
        <attr name="tvea_textContentSize" format="dimension" />
        <attr name="tvea_textShrink" format="string" />
        <attr name="tvea_textExpand" format="string" />
    </declare-styleable>


</resources>