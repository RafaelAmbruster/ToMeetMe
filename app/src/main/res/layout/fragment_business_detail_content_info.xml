<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/global_bg_front"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/elevation_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="@dimen/global_spacing_xxs"
            android:text="@string/fragment_business_detail_info_title"
            android:textAppearance="@style/TextAppearance.LocalBigApp.Headline" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/dividerHorizontal" />


        <Button
            android:id="@+id/btn_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/md_btn_selector_custom_accent"
            android:drawableRight="@drawable/ic_action_select_categories"
            android:text="WORK SCHEDULE"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/dividerHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/global_spacing_xxs"
            android:paddingTop="@dimen/global_spacing_xxs">

            <TextView
                android:id="@+id/fragment_poi_detail_info_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_clickable_item_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_mail_outline"
                android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
                android:ellipsize="end"
                android:textSize="16dp"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="@dimen/global_spacing_l"
                android:paddingBottom="@dimen/global_spacing_xxs"
                android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
                android:paddingRight="@dimen/global_spacing_xs"
                android:paddingTop="@dimen/global_spacing_xxs"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/material_grey_800"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/fragment_poi_detail_info_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_clickable_item_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_card_link"
                android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
                android:ellipsize="end"
                android:focusable="true"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:minHeight="@dimen/global_spacing_l"
                android:paddingBottom="@dimen/global_spacing_xxs"
                android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
                android:paddingRight="@dimen/global_spacing_xs"
                android:paddingTop="@dimen/global_spacing_xxs"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/material_grey_800"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/fragment_poi_detail_info_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_clickable_item_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_card_phone"
                android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textSize="16dp"
                android:minHeight="@dimen/global_spacing_l"
                android:paddingBottom="@dimen/global_spacing_xxs"
                android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
                android:paddingRight="@dimen/global_spacing_xs"
                android:paddingTop="@dimen/global_spacing_xxs"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/material_grey_800"
                android:textStyle="normal"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
