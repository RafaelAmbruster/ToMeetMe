<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="@color/grey_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_parent"
            style="@style/RippleStyleBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="@dimen/spacing_medium"
            app:cardElevation="@dimen/spacing_xsmall"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:padding="@dimen/global_spacing_xxs"
                    android:text="@string/fragment_business_detail_info_title"
                    android:textAppearance="@style/TextAppearance.LocalBigApp.Headline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/global_spacing_xxs"
                    android:paddingTop="@dimen/global_spacing_xxs">

                    <TextView
                        android:id="@+id/fragment_user_detail_info_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_card_phone"
                        android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:minHeight="@dimen/global_spacing_l"
                        android:paddingBottom="@dimen/global_spacing_xxs"
                        android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
                        android:paddingRight="@dimen/global_spacing_xs"
                        android:paddingTop="@dimen/global_spacing_xxs"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/material_grey_800"
                        android:textStyle="normal"/>


                    <TextView
                        android:id="@+id/fragment_user_detail_info_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:drawableLeft="@drawable/ic_card_address"
                        android:drawablePadding="@dimen/fragment_poi_detail_info_item_padding"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:minHeight="@dimen/global_spacing_l"
                        android:paddingBottom="@dimen/global_spacing_xxs"
                        android:paddingLeft="@dimen/fragment_poi_detail_info_item_padding"
                        android:paddingRight="@dimen/global_spacing_xs"
                        android:paddingTop="@dimen/global_spacing_xxs"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/material_grey_800"
                        android:textStyle="normal" />

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>